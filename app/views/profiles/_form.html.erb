<%= form_for @profile do |f| %>
    <% @profile.errors.full_messages.each do |msg| %>
        <p class="alert alert-danger"><%= msg %></p>
    <% end %>

    <div class="form-group">
      <label>First Name</label>
      <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Last Name</label>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Phone number</label>
      <%= f.text_field :phone_nr,  placeholder:"0000000000", class: "form-control" %>
    </div>

    <div class="form-group">
      <p> Adress</p>
      <label>Street Name</label>
      <%= f.text_field :street_name, placeholder: "Street Name", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>House Number</label>
      <%= f.text_field :house_nr, placeholder:"House Number", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>House Number Addition</label>
      <%= f.text_field :house_nr_add, placeholder:"House Number Addition", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Postal Code</label>
      <%= f.text_field :postal_code, placeholder: "Postalcode", class: "form-control" %>
    </div>


    <div class="form-group">
      <label>City</label>
      <%= f.text_field :city, placeholder:"City", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Country</label>
      <%= f.text_field :country, placeholder:"Country", class: "form-control" %>
    </div>

    <div class="form-group">
      <label>Birthday</label>
      <%= f.date_field :birthday, placeholder: "Birthday", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Save", class: "btn btn-primary" %>
      <%= link_to "Back", root_path, class: "btn btn-default" %>
    </div>
<% end %>
