<div class="panel panel-primary">
  <div class="panel-heading"><%= @product.name %></div>

  <div class="panel-body">

    <h4><%= @product.name %></h4>
    <p><%= @product.species %></p>

    <!-- Main Info -->
    <h4>Your plant</h4>
    <p><%= @product.description %></p>

    <!-- About -->
    <h4>About</h4>
    <p>Maintenance: <%= @product.maintenance %></p>
    <p>Image to be posted via cloudinary</p>


    <h4>Price</h4>
    <p><%= @product.price %></p>
  </div>

</div>

<%= link_to "[Edit]", edit_product_path( @product.id ) %>

<%= link_to "Back", product_path, class: "btn btn-default" %>
