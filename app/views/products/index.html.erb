<div class="jumbotron">

<h1 class="page-title">Green Gems</h1>
<p>Welcome to Green Gems!</p>
</div>

<div class="container">
</div>

<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
    </ul>
  </div>
  <div class="col-md-9">


        <% @products.each do |product| %>
            <div class="row">
              <div class="col-md-7">
                <h4><%= link_to product.name, product_path(product.id) %></h4>
                <div class="panel panel-default">
                <%= image_tag product.image_url %>
              </div>
              </div>
              <div class="col-md-3 right">
                <%= link_to "View", product, class: "btn btn-default" %>
                <%= link_to "Update", edit_product_path(product), class: "btn btn-default" %>
              </div>
            </div>
        <% end %>

      </div>
    </div>

    <%= link_to "Add new Plant", new_product_path, class: "btn btn-primary" %>
  </div>
</div>
